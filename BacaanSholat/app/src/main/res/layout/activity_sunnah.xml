<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ui.sunnah.SunnahActivity">

    <Button
        android:id="@+id/btn_move_qsubuh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:backgroundTint="#EDCC69"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Shalat Qabliyah Subuh" />

    <Button
        android:id="@+id/btn_move_qdzuhur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Qabliyah Dzuhur"
        android:backgroundTint="#AA8D38"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_qashar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Qabliyah Ashar"
        android:backgroundTint="#856A1D"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_qmaghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Qabliyah Maghrib"
        android:backgroundTint="#EDCC69"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_qisya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Qabliyah Isya"
        android:backgroundTint="#AA8D38"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_bdzuhur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Ba'diyah Dzuhur"
        android:backgroundTint="#856A1D"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:id="@+id/btn_move_bmaghrib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Ba'diyah Maghrib"
        android:backgroundTint="#EDCC69"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_bisya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Ba'diyah Isya"
        android:backgroundTint="#AA8D38"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_dhuha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Dhuha"
        android:backgroundTint="#856A1D"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_move_tahajud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shalat Tahajud"
        android:backgroundTint="#EDCC69"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>